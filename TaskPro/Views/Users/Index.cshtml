@model IEnumerable<TaskPro.Models.UserViewModel>

@{
    ViewData["Title"] = "Users";
}

<div class="container-fluid px-4 mt-5">
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New User</a>
    </p><hr />

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Users List
        </div>
        <div class="card-body">
            <table id="datatablesSimple" class="table">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>FullName</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Email</td>
                            <td>@item.Role</td>
                            <td>@item.FullName</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>

                                @if (item.HasTasks)
                                {
                                    <button class="btn btn-danger btn-sm" disabled>Delete</button>
                                }
                                else
                                {
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline">
                                        <button type="submit" class="btn btn-danger btn-sm"
                                                onclick="return confirm('Are you sure you want to delete this user?')">
                                            Delete
                                        </button>
                                    </form>
                                }

                                <form asp-action="ResendEmail" method="post" style="display:inline">
                                    <input type="hidden" name="email" value="@item.Email" />
                                    <button type="submit" class="btn btn-warning btn-sm"
                                            onclick="return confirm('Resend password setup email to @item.Email?')">
                                        Resend Email
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>