@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Roles";
    var roleUsage = ViewBag.RoleUsage as Dictionary<string, bool>;
}

<div class="container-fluid px-4 mt-5">
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Role</a>
    </p>
    <hr />

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Roles List
        </div>
        <div class="card-body">
            <table id="datatablesSimple" class="table">
                <thead>
                    <tr>
                        <th>Role Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>@role.Name</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-primary btn-sm">Edit</a>

                                @if (roleUsage.ContainsKey(role.Id) && roleUsage[role.Id])
                                {
                                    <button class="btn btn-danger btn-sm" disabled>Delete</button>
                                }
                                else
                                {
                                    <form asp-action="Delete" asp-route-id="@role.Id" method="post" style="display:inline">
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this role?')">Delete</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
