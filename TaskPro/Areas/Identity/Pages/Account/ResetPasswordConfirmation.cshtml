@page
@model ResetPasswordConfirmationModel
@{
    Layout = null;
    ViewData["Title"] = "Reset password confirmation";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/StyleSheet.css" rel="stylesheet" />

</head>
<body>
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="card shadow-lg rounded-4 text-center p-4" style="max-width: 450px; width: 100%;">
            <h2 class="mb-3">@ViewData["Title"]</h2>
            <p class="mb-4">Your password has been reset successfully.</p>
            <a asp-page="./Login" class="btn btn-primary w-100">Click here to log in</a>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
