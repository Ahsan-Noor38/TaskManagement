@model TaskReportPageViewModel

<div class="container mt-4">
    <h2 class="mb-4">📊 Task Report</h2>

    <!-- Filter Form -->
    <form asp-action="TaskReport" method="post" class="card p-3 mb-4 shadow-sm">
        <div class="row g-3">
            <div class="col-md-3">
                <label class="form-label fw-bold">User</label>
                <select asp-for="Filter.UserId" asp-items="Model.AvailableUsers" class="form-select">
                    <option value="">-- All --</option>
                </select>
            </div>

            <div class="col-md-3">
                <label class="form-label fw-bold">Status</label>
                <select asp-for="Filter.Status" asp-items="Model.TaskStatusList" class="form-select">
                    <option value="">-- All --</option>
                </select>
            </div>

            <div class="col-md-2">
                <label class="form-label fw-bold">From</label>
                <input type="date" asp-for="Filter.FromDate" class="form-control" />
            </div>

            <div class="col-md-2">
                <label class="form-label fw-bold">To</label>
                <input type="date" asp-for="Filter.ToDate" class="form-control" />
            </div>

            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-funnel"></i> Filter
                </button>
            </div>
        </div>
    </form>

    @if (Model.Results.Any())
    {
        <!-- Export Button -->
        <form asp-action="ExportToCsv" method="post" class="mb-3">
            <input type="hidden" name="UserId" value="@Model.Filter.UserId" />
            <input type="hidden" name="FromDate" value="@Model.Filter.FromDate?.ToString("yyyy-MM-dd")" />
            <input type="hidden" name="ToDate" value="@Model.Filter.ToDate?.ToString("yyyy-MM-dd")" />
            <input type="hidden" name="Status" value="@((int?)Model.Filter.Status)" />
            <button type="submit" class="btn btn-success">
                <i class="bi bi-file-earmark-spreadsheet"></i> Export to CSV
            </button>
        </form>

        <!-- Results Table -->
        <div class="table-responsive shadow-sm">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Task Title</th>
                        <th>Assigned User</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th>Last Updated</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var task in Model.Results)
                    {
                        <tr>
                            <td>@task.TaskTitle</td>
                            <td>@task.AssignedUser</td>
                            <td>
                                <span class="badge bg-info text-dark">@task.Status</span>
                            </td>
                            <td>@task.CreatedDate.ToString("yyyy-MM-dd")</td>
                            <td>@(task.CompletedDate?.ToString("yyyy-MM-dd") ?? "—")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning mt-3">
            No results found for the selected filters.
        </div>
    }
</div>

<!-- Optional Custom Styles -->
<style>
    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }
</style>
