@page
@model LoginWithRecoveryCodeModel
@{
    Layout = null;
    ViewData["Title"] = "Recovery code verification";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/StyleSheet.css" rel="stylesheet" />

</head>
<body>
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="card shadow-lg rounded-4 p-4" style="max-width: 500px; width: 100%;">
            <h2 class="text-center mb-3">@ViewData["Title"]</h2>
            <p class="  text-center">
                You have requested to log in with a recovery code. This login will not be remembered until you provide an authenticator app code or disable 2FA and log in again.
            </p>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" placeholder="Recovery code" />
                    <label asp-for="Input.RecoveryCode"></label>
                    <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
            </form>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
