@page
@model LoginWith2faModel
@{
    Layout = null;
    ViewData["Title"] = "Two-factor authentication";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/StyleSheet.css" rel="stylesheet" />

</head>
<body>
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="card shadow-lg rounded-4 p-4" style="max-width: 500px; width: 100%;">
            <h2 class="text-center mb-3">@ViewData["Title"]</h2>
            <p class="  text-center">Your login is protected with an authenticator app. Enter your code below.</p>
            <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                <input asp-for="RememberMe" type="hidden" />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.TwoFactorCode" class="form-control" autocomplete="off" />
                    <label asp-for="Input.TwoFactorCode"></label>
                    <span asp-validation-for="Input.TwoFactorCode" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="Input.RememberMachine" class="form-check-input" />
                    <label asp-for="Input.RememberMachine" class="form-check-label">
                        @Html.DisplayNameFor(m => m.Input.RememberMachine)
                    </label>
                </div>

                <button type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
            </form>

            <p class="mt-3 text-center">
                Don't have access to your authenticator device?<br />
                <a id="recovery-code-login" asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl">Log in with a recovery code</a>.
            </p>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
