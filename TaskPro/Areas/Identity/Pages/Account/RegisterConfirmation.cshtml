@page
@model RegisterConfirmationModel
@{
    Layout = null;
    ViewData["Title"] = "Register confirmation";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/StyleSheet.css" rel="stylesheet" />

</head>
<body>
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="card shadow-lg rounded-4 p-4" style="max-width: 600px; width: 100%;">
            <h2 class="text-center mb-4">@ViewData["Title"]</h2>

            @if (Model.DisplayConfirmAccountLink)
            {
                <div class="alert alert-warning">
                    <p>
                        This app does not currently have a real email sender registered. See
                        <a href="https://aka.ms/aspaccountconf" target="_blank">these docs</a> for how to configure one.
                    </p>
                    <p>
                        Normally this would be emailed: <br />
                        <a id="confirm-link" class="btn btn-primary mt-2" href="@Model.EmailConfirmationUrl">
                            Click here to confirm your account
                        </a>
                    </p>
                </div>
            }
            else
            {
                <div class="alert alert-success">
                    <p>Please check your email to confirm your account.</p>
                </div>
            }
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
